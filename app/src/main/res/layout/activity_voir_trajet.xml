<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".VoirTrajetActivity"
    android:background="#ffffffff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:layout_marginTop="200dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/cerclevert"
                android:layout_marginTop="9dp" />

            <TextView
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="De"
                android:id="@+id/textView9"
                android:enabled="false"
                android:editable="false"
                android:layout_marginLeft="5dp"
                android:textColor="#56000000"
                android:layout_marginTop="0dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/editText"
                android:layout_weight="0.90"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:textColor="#ff1914ff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:layout_marginTop="25dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/cerclerouge"
                android:layout_marginTop="9dp" />

            <TextView
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ã€"
                android:id="@+id/textView10"
                android:layout_marginLeft="5dp"
                android:textColor="#56000000"
                android:layout_marginTop="0dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/editText2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:textColor="#ff2b39ff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:weightSum="1"
            style="@style/dps">

            <DatePicker
                style="@android:style/TextAppearance.DeviceDefault.Widget.TextView"
                android:layout_width="297dp"
                android:layout_height="83dp"
                android:id="@+id/datePicker"
                android:calendarViewShown="false"
                android:style="@/Widget.DatePicker"/>



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
