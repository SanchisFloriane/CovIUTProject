<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.srava.coviutproject.VoirTrajetActivity"
    android:background="#ffffffff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView2"
                android:src="@drawable/cerclevert"
                android:layout_marginTop="9dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="De"
                android:id="@+id/lbl_de"
                android:enabled="false"
                android:editable="false"
                android:layout_marginLeft="5dp"
                android:textColor="#56000000"
                android:layout_marginTop="2dp" />

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/edt_de"
                android:layout_weight="0.75"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textSize="15dp"
                android:focusableInTouchMode="true"
                android:focusable="true" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageButton"
                android:layout_marginTop="6dp"
                android:src="@drawable/croix"
                android:background="#ffffffff"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView3"
                android:src="@drawable/cerclerouge"
                android:layout_marginTop="9dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ã€"
                android:id="@+id/lbl_a"
                android:layout_marginLeft="5dp"
                android:textColor="#56000000"
                android:layout_marginTop="2dp" />

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/edt_a"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.75"
                android:textSize="15dp"
                android:focusableInTouchMode="true"
                android:focusable="true" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageButton2"
                android:layout_marginTop="6dp"
                android:src="@drawable/croix"
                android:background="#ffffffff"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:layout_marginTop="25dp"
            android:id="@+id/ll3">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView4"
                android:src="@drawable/calendar"
                android:layout_marginTop="9dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Date"
                android:id="@+id/lbl_date"
                android:textColor="#56000000"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp" />

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/edt_date"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.75"
                android:layout_marginTop="2dp"
                android:clickable="false"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:textSize="15dp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageButton3"
                android:layout_marginTop="6dp"
                android:src="@drawable/croix"
                android:background="#ffffffff"
                android:contentDescription=""
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/llDate"
            android:layout_gravity="center"
            android:visibility="invisible">

            <DatePicker
                android:layout_width="fill_parent"
                android:layout_height="140dp"
                android:id="@+id/calendrier"
                android:calendarViewShown="false"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/linearLayoudDate"
            android:layout_weight="0.07">

            <Button
                android:id="@+id/btn_rechercherTrajet"
                android:layout_width="209dp"
                android:layout_height="40dp"
                android:text="Rechercher"
                android:background="@drawable/shape"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="65dp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
